<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left|center_vertical"
            android:gravity="left"
            android:src="@drawable/interrogante" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Texto"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#739fd6"
            android:textSize="55dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:src="@drawable/flechas" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="85dp"
            android:src="@drawable/avance_izquierda" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewAlumno"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:weightSum="1">

                >

                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView3"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView7"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView5"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_corner">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Texto"
                        android:id="@+id/textView8"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textSize="40dp"
                        android:textColor="#005acc" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="236dp"
                        android:layout_height="207dp"
                        android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/flechas"
                        android:layout_marginTop="10dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="85dp"
            android:src="@drawable/avance_derecha" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

</LinearLayout>